<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="?android:attr/colorBackground">

    <!-- Cabeçalho do Widget -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="4dp">

        <TextView
            android:id="@+id/widget_list_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lista de Compras"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/widget_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/0 itens"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary"
            android:paddingStart="8dp" />
    </LinearLayout>

    <!-- Container para ListView e Empty View -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Lista de Itens -->
        <ListView
            android:id="@+id/widget_items_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@android:color/transparent"
            android:dividerHeight="2dp" />

        <!-- Empty View (exibido quando não houver itens) -->
        <TextView
            android:id="@+id/widget_empty_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Nenhum item pendente"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary"
            android:gravity="center"
            android:visibility="gone" />
    </FrameLayout>

    <!-- Container para botões -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <!-- Botão de Filtro -->
        <Button
            android:id="@+id/widget_filter_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pendentes"
            android:textSize="10sp"
            android:layout_marginEnd="2dp"
            style="?android:attr/buttonStyleSmall" />

        <!-- Botão Adicionar Item -->
        <Button
            android:id="@+id/widget_add_item_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/adicionar_item"
            android:textSize="10sp"
            android:layout_marginStart="2dp"
            style="?android:attr/buttonStyleSmall" />
    </LinearLayout>

</LinearLayout>

